vrrp_script chk_haproxy {
    script "pidof postgres"
    interval 2
    weight 2
}
vrrp_instance VI_1 {
    interface ens4
    state MASTER
    virtual_router_id 51
    priority {{ 100 + play_hosts.index(inventory_hostname) }}
    virtual_ipaddress {
        {{ floating_ip }}
    }
    track_script {
        chk_haproxy
    }
}